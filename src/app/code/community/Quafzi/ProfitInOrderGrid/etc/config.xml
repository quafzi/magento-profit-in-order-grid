<?xml version="1.0"?>
<config>
    <modules>
        <Quafzi_ProfitInOrderGrid>
            <version>3.0.0</version>
        </Quafzi_ProfitInOrderGrid>
    </modules>
    <global>
        <blocks>
            <quafzi_profitinordergrid>
                <class>Quafzi_ProfitInOrderGrid_Block</class>
            </quafzi_profitinordergrid>
        </blocks>
        <helpers>
            <quafzi_profitinordergrid>
                <class>Quafzi_ProfitInOrderGrid_Helper</class>
            </quafzi_profitinordergrid>
        </helpers>
        <models>
            <quafzi_profitinordergrid>
                <class>Quafzi_ProfitInOrderGrid_Model</class>
            </quafzi_profitinordergrid>
        </models>
        <resources>
            <quafzi_profitinordergrid_setup>
                <setup>
                    <module>Quafzi_ProfitInOrderGrid</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </quafzi_profitinordergrid_setup>
        </resources>
        <events>
            <sales_order_item_save_before>
                <observers>
                    <!-- update profit values of order item -->
                    <quafzi_profitinordergrid_add_profit_to_order>
                        <class>quafzi_profitinordergrid/observer</class>
                        <method>updateOrderItemCostAndProfit</method>
                    </quafzi_profitinordergrid_add_profit_to_order>
                </observers>
            </sales_order_item_save_before>
            <sales_order_save_before>
                <observers>
                    <!-- update profit values of order -->
                    <quafzi_profitinordergrid_add_profit_to_order>
                        <class>quafzi_profitinordergrid/observer</class>
                        <method>updateOrderCostAndProfit</method>
                    </quafzi_profitinordergrid_add_profit_to_order>
                </observers>
            </sales_order_save_before>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <quafzi_profitinordergrid before="Mage_Adminhtml">Quafzi_ProfitInOrderGrid_Adminhtml</quafzi_profitinordergrid>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <core_layout_block_create_after>
                <observers>
                    <quafzi_profitinordergrid_adminhtml_block_create_after>
                        <class>quafzi_profitinordergrid/observer</class>
                        <method>addColumnsAfterBlockCreate</method>
                    </quafzi_profitinordergrid_adminhtml_block_create_after>
                </observers>
            </core_layout_block_create_after>
            <core_block_abstract_to_html_after>
                <observers>
                    <!-- Inject cost and profit into order items in adminhtml order detail view -->
                    <quafzi_profitinordergrid_adminhtml_block_html_before>
                        <class>quafzi_profitinordergrid/observer</class>
                        <method>afterBlockToHtml</method>
                    </quafzi_profitinordergrid_adminhtml_block_html_before>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
        <layout>
            <updates>
                <quafzi_profitinordergrid>
                    <file>quafzi_profitinordergrid.xml</file>
                </quafzi_profitinordergrid>
            </updates>
        </layout>
        <translate>
            <modules>
                <Quafzi_ProfitInOrderGrid>
                    <files>
                        <default>Quafzi_ProfitInOrderGrid.csv</default>
                    </files>
                </Quafzi_ProfitInOrderGrid>
            </modules>
        </translate>
    </adminhtml>
</config>
